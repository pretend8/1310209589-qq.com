/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.top{
  height: 80rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background: #87CEFA;
}
.top input{
  font-size: 24rpx;
  color: #333;
  height: 100%;
  padding: 0 30rpx;
  background: #fff;
  border-radius: 30rpx;
  border: 1rpx solid #f5f5f5;
}
.top input::placeholder{
  color: #666;
}
