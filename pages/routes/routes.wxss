/* pages/routes/routes.wxss */
.route-container{
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.top-bar{
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
}
.top-item{
  flex: 1;
  text-align: center;  
  font-size: 28rpx;
  color: #666;
}
.top-item-active{
  color: #333;
  font-weight: bolder;
}
.wrap{
  flex: 1;
}
.bottom{
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
  align-items: center;
}
.bottom-left{
  flex: 1
}
.bottom-left-minutes,.bottom-left-costs{
  font-size: 32rpx;
  line-height: 150%;
}
.bottom-left-minutes{
color: #333;
}
.bottom-left-costs{
  color: #666;
}
.bottom-right button{
  display: block;
  margin-bottom: 10rpx;
}

.wrap-container-item view{
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}