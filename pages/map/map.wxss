/* pages/map/map.wxss */
.map-container{
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  border: 1px silud red;

}
.top{
  height: 80rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background: #87CEFA;
}
.top input{
  font-size: 24rpx;
  color: #333;
  height: 100%;
  padding: 0 30rpx;
  background: #fff;
  border-radius: 30rpx;
  border: 1rpx solid #f5f5f5;
}
.top input::placeholder{
  color: #666;
}
.map{
  flex: 1;
}
.bottom{
  padding:0 30rpx;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  align-items: center
}
.bottom-left{
  flex: 1;
}
.bottom-left-name{
  font-size: 32rpx;
  line-height: 200%;
  color: #333;
}
.bottom-left-desc{
  font-size: 28rpx;
  color: #666;
}
.bottom-right{
    height: 160rpx;
    width: 160rpx;
    background: #87CEFA;
    border-radius:50%;
    text-align: center
}
.bottom-right image{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}
.bottom-right-txt{
  font-size: 30rpx;
  color: #fff;
  text-align: center;
}
